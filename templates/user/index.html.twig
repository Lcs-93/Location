{% extends 'base.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <h1>User List</h1>

    <table>
        <thead>
            <tr>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">View</a> |
                        <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a> |
                        <form action="{{ path('user_delete', {'id': user.id}) }}" method="post" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">No users found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_create') }}">Create New User</a>
{% endblock %}
