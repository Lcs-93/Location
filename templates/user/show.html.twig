{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <h1>Détails de l'utilisateur</h1>

    <table class="table">
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Rôles</th>
            <td>
                {% for role in user.roles %}
                    {{ role }}<br>
                {% endfor %}
            </td>
        </tr>
    </table>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
    <form action="{{ path('user_delete', {'id': user.id}) }}" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>

    <a href="{{ path('user_list') }}" class="btn btn-secondary">Retour</a>
{% endblock %}

