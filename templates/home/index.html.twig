{% extends 'base.html.twig' %}

{% block title %}Accueil - Car Rental{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home') }}">Car Rental</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('vehicle_index') }}">Véhicules</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_reservation_index') }}">Réservations</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('user_list') }}">Utilisateurs</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenu de la page d'accueil -->
    <div class="container text-center mt-5">
        <h1 class="display-4">Bienvenue sur Car Rental</h1>
        <p class="lead">Louez votre voiture facilement et rapidement.</p>
        <a href="{{ path('vehicle_index') }}" class="btn btn-primary btn-lg">Voir les véhicules</a>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-5">
        <p>© {{ "now"|date("Y") }} Car Rental. Tous droits réservés.</p>
    </footer>
{% endblock %}
